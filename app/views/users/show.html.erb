<div class="row">
  <div id="search" class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
    <%= form_tag all_search_path do %>
      <%= text_field_tag :search, params[:search], :id => "search-form"%>
      <%= submit_tag "Search", :name => nil, :id => "search-button"  %>
    <% end %>
  </div>
</div>
<div class="row user-info">
  <div class="col-xs-12 col-sm-offset-1 col-sm-3">
    <span><%= image_tag("profile-no-image.png", class: 'user-image img-responsive') %></span>
  </div>
  <div class="col-xs-12 col-sm-8">
    <table class="table user-data">
      <tbody>
        <tr>
          <td>First Name</td>
          <td><%= current_user.first_name %></td>
        </tr>
        <tr>
          <td>Last Name</td>
          <td><%= current_user.last_name %></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <td colspan="2"><%= link_to 'Update Profile Information', edit_users_path %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-4">
    <div class="stat-display">
      <div class="stat-title">
        <h3>Snippet&nbsp;Count</h3>
      </div>
      <div class="stat">
        <%= current_user.snippets.count %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
    <div class="stat-display">
      <div class="stat-title">
        <h3>Note&nbsp;Count</h3>
      </div>
      <div class="stat">
        <%= current_user.notes.count %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
    <div class="stat-display">
      <div class="stat-title">
        <h3>Vote&nbsp;Count</h3>
      </div>
      <div class="stat">
        <%= current_user.votes.count %>
      </div>
    </div>
  </div>
</div>
