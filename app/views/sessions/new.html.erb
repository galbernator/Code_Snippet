<div class="row">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4">
    <h1 class="center-text">Log In</h1>
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email,"", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password,"", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Sign In", class: "form-control account-button" %>
      </div>
    <% end %>
  </div>
</div>
