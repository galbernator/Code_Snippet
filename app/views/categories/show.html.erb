<div class="row">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
    <%= form_tag category_search_path(@category) do %>
      <%= text_field_tag :search, params[:search], :id => "search-form"%>
      <%= submit_tag "Search", :name => nil, :id => "search-button"  %>
    <% end %>
  </div>
</div>
<div class="row">
  <h1 class="center-text"><%= @category.title %> Snippets</h1>
  <% if @category.snippets.any? %>
    <% @category.snippets.each do |snippet| %>
      <div class="well">
          <%= link_to snippet.title, snippet_path(snippet) %>
      </div>
    <% end %>
  <% else %>
    <div class="well">
      <h2 class="center-text">These are not the snippets you are looking for.</h2>
      <p class="center-text">Oh no, there currently aren't any <%= @category.title %> snippets. Why don't you kick it off by <%= link_to 'adding the first', new_snippet_path %>!</p>
    </div>
    <hr>
  <% end %>

</div>
