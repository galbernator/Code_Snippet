<div class="row">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
    <%= form_tag category_search_path(@category) do %>
      <%= text_field_tag :search, params[:search], :id => "search-form"%>
      <%= submit_tag "Search", :name => nil, :id => "search-button"  %>
    <% end %>
  </div>
</div>

<h1><%= @category.title %> Snippets</h1>

<% @snippets.each do |snippet| %>
  <%= link_to snippet.title, snippet_path(snippet) %>
  <hr>
<% end %>
