<div class="row">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
    <h1 class="text-center">Categories</h1>
    <div class="row">
      <% @categories.each do |category| %>
        <% if category %>
          <div class="col-xs-6 col-sm-4 col-md-3 search-results">
            <span class="center-block"><%= link_to category.title, category_path(category) %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
