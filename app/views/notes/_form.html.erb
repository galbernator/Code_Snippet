<div id="note-errors"></div>
<%= form_for note, remote: note.new_record? do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control note-field", placeholder: 'Title...' %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control note-field", rows: '13', placeholder: 'What would you like to remember?' %>
  </div>
  <div class="markdown-help-container">
    <span class="markdown-help-text"><%=  image_tag('markdown_logo.png', size: '20x12') %><%= link_to "GitHub flavored Markdown is supported.", "http://kramdown.gettalong.org/quickref.html", target: "_blank" %></span>
  </div>
  <div class="form-group">
    <%= f.collection_select :category_ids, Category.order("title"), :id, :title, {}, {multiple: true, class: "note-field chosen-select form-control"} %>
  </div>
  <div class="form-group">
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: "note-field form-control account-button" %>
  </div>
  <% unless note.new_record? %>
    <div class="spacer"></div>
  <% end %>
<% end %>
