<div>
  <% if @snippet.errors.any? %>
    <ul class="submit-errors">
      <% @snippet.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
      <% end %>
    </ul>
    <% end %>
</div>

<div>
  <%= form_for @snippet do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :block, "Snippet: " %>
      <%= f.text_area :block, class: "form-control", id: "code-block", rows: '7'%>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description of Snippet: " %>
      <%= f.text_area :description, class: "form-control", rows: '4' %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_select :category_ids, Category.order("title"), :id, :title, {prompt: "Select categories"}, {multiple: true, class: "chosen-select form-control"} %>
    </div>
    <% if current_user %>
    <div class="form-group">
      <%= f.check_box :is_private, :class => "checkbox-inline" %>
      <%= f.label :is_private, "Private" %>
    </div>
    <% end %>
    <div class="form-group">
      <%= f.submit "Save", class: "form-control account-button" %>
    </div>
  <% end %>
</div>
