<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <h1 class="text-center">Categories</h1>
    <div class="row">
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Category Name</th>
            <th>Snippet Count</th>
            <th>Added</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.title %></td>
              <td><%= category.snippets.count %></td>
              <td><%= category.created_at.strftime('%d %b %Y') %></td>
              <td class="text-right"><%= link_to 'Edit', edit_admin_category_path(category) %> | <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?'}%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
